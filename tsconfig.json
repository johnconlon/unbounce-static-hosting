{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/node_modules/**/*"]
}
